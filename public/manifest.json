{
  "name": "Twitter NFTs",
  "version": "1.00",
  "description": "Convert Twitter for NFT's Owners",
  "manifest_version": 3,
  "content_scripts": [{
    "matches": [ "*://twitter.com/*" ],
    "css": ["css/nft-Gallery.css", "css/floor-price-tab.css"],
    "js": [ "contentScript.js" ],
    "run_at": "document_idle",
    "all_frames": true
}],
  "background":
    {
      "service_worker": "background.js"
    },
    "permissions": [
      "activeTab", "notifications", "storage", "scripting"],
   
   "host_permissions": [
     "http://*/*",
     "*://*/*"
   ],

  "icons" : { "42": "icons/icon_48.png",
              "128": "icons/icon_128.png" },

  "action": {
    "default_title": "Twitter NFT",
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": [
      "https://*.twitter.com/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["display_nft_Gallery.js", "display_nft_floor_price.js", "popup.html"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
